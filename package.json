{
  "name": "marktion",
  "version": "0.0.1",
  "description": "marktion is a WYSIWYG Markdown editor",
  "homepage": "https://remark.js.org",
  "repository": "https://github.com/microvoid/marktion",
  "bugs": "https://github.com/microvoid/issues",
  "license": "MIT",
  "author": "whistleryz@gmail.com",
  "contributors": [],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "site": "tsc && vite build -c ./vite.config.site.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "pnpm run format:source && pnpm run format:other",
    "format:other": "prettier ./**/*.{md,json,html} --write",
    "format:source": "prettier ./**/*.{ts,tsx,js} --write"
  },
  "type": "module",
  "main": "./dist/marktion.umd.js",
  "module": "./dist/marktion.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@ant-design/cssinjs": "^1.11.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@tiptap/core": "^2.0.3",
    "@tiptap/extension-code-block": "^2.0.3",
    "@tiptap/extension-code-block-lowlight": "^2.0.3",
    "@tiptap/extension-highlight": "^2.0.3",
    "@tiptap/extension-image": "^2.0.3",
    "@tiptap/extension-link": "^2.0.3",
    "@tiptap/extension-table": "^2.0.3",
    "@tiptap/extension-table-cell": "^2.0.3",
    "@tiptap/extension-table-header": "^2.0.3",
    "@tiptap/extension-table-row": "^2.0.3",
    "@tiptap/extension-task-item": "^2.0.3",
    "@tiptap/extension-task-list": "^2.0.3",
    "@tiptap/extension-typography": "^2.0.3",
    "@tiptap/pm": "^2.0.3",
    "@tiptap/react": "^2.0.3",
    "@tiptap/starter-kit": "^2.0.3",
    "@tiptap/suggestion": "^2.0.3",
    "antd": "^5.6.4",
    "highlight.js": "^11.8.0",
    "lowlight": "^2.9.0",
    "lucide-react": "^0.258.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-parse": "^8.0.4",
    "rehype-remark": "^9.1.2",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-html": "^15.0.2",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "remark-stringify": "^10.0.3",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@types/file-saver": "^2.0.5",
    "@types/node": "^20.4.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "file-saver": "^2.0.5",
    "gh-pages": "^5.0.0",
    "postcss": "8.4.24",
    "prettier": "^3.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^3.2.0"
  }
